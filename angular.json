{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"newProjectRoot": "projects",
	"cli": {
		"cache": {
			"enabled": true
		}
	},
	"projects": {
		"restaurant-pos": {
			"projectType": "application",
			"schematics": {
				"@schematics/angular:component": {
					"style": "scss",
					"standalone": true,
					"changeDetection": "OnPush"
				}
			},
			"root": "",
			"sourceRoot": "src",
			"prefix": "",
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-angular:application",
					"options": {
						"index": "src/index.html",
						"browser": "src/main.ts",
						"polyfills": ["zone.js"],
						"tsConfig": "tsconfig.app.json",
						"inlineStyleLanguage": "scss",
						"styles": ["src/styles.scss"],
						"scripts": [],
						"assets": [
							"src/assets",
							{
								"glob": "**/*",
								"input": "public"
							}
						],
						"budgets": [
							{
								"type": "initial",
								"maximumWarning": "500kB",
								"maximumError": "1.1MB"
							},
							{
								"type": "anyComponentStyle",
								"maximumWarning": "2kB",
								"maximumError": "4kB"
							}
						]
					},
					"configurations": {
						"webstore": {
							"outputHashing": "all",
							"outputPath": "dist/webstore",
							"index": "src/targets/webstore/index.html",
							"browser": "src/targets/webstore/main.ts",
							"assets": [
								{
									"glob": "**/*",
									"input": "src/assets/webstore",
									"output": "assets/webstore"
								},
								{
									"glob": "**/*",
									"input": "public/webstore"
								}
							],
							"fileReplacements": [
								{
									"replace": "src/app/core/environments/env.ts",
									"with": "src/app/core/environments/env.prod.ts"
								}
							]
						},
						"chat": {
							"outputHashing": "all",
							"outputPath": "dist/chat",
							"browser": "src/targets/chat/main.ts",
							"fileReplacements": [
								{
									"replace": "src/app/core/environments/env.ts",
									"with": "src/app/core/environments/env.prod.ts"
								}
							]
						},
						"production": {
							"outputHashing": "all",
							"outputPath": "dist/restaurant-pos",
							"fileReplacements": [
								{
									"replace": "src/app/core/environments/env.ts",
									"with": "src/app/core/environments/env.prod.ts"
								}
							]
						},
						"development": {
							"outputPath": "dist/restaurant-pos",
							"optimization": false,
							"extractLicenses": false,
							"sourceMap": true,
							"budgets": []
						}
					},
					"defaultConfiguration": "production"
				},
				"serve": {
					"builder": "@angular-devkit/build-angular:dev-server",
					"options": {
						"host": "0.0.0.0",
						"disableHostCheck": true
					},
					"configurations": {
						"production": {
							"buildTarget": "restaurant-pos:build:production"
						},
						"development": {
							"buildTarget": "restaurant-pos:build:development"
						}
					},
					"defaultConfiguration": "development"
				},
				"extract-i18n": {
					"builder": "@angular-devkit/build-angular:extract-i18n"
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"polyfills": ["zone.js", "zone.js/testing"],
						"tsConfig": "tsconfig.spec.json",
						"inlineStyleLanguage": "scss",
						"assets": [
							{
								"glob": "**/*",
								"input": "public"
							}
						],
						"styles": ["src/styles.scss"],
						"scripts": [],
						"fileReplacements": [
							{
								"replace": "src/app/core/environments/env.ts",
								"with": "src/app/core/environments/env.test.ts"
							}
						]
					}
				}
			}
		}
	}
}
